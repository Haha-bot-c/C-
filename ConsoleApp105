using System;

namespace ConsoleApp105
{
    class Program
    {
        static void Main()
        {
            const int MinutesInHour = 60;

            int timePerPatientMinutes = 10;
            int totalWaitingTimeMinutes = 0;

            Console.Write("Введите кол-во пациентов: ");

            while(int.TryParse(Console.ReadLine(), out int numberOfPatients))
            {
                totalWaitingTimeMinutes = numberOfPatients * timePerPatientMinutes;  
            }

            int hours = totalWaitingTimeMinutes / MinutesInHour;
            int minutes = totalWaitingTimeMinutes % MinutesInHour;

            Console.WriteLine($"Вы должны отстоять в очереди {hours} часов и {minutes} минут.");
            Console.ReadLine();
        }
    }
}
