using System;

namespace ConsoleApp105
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Введите начальное количество золота: ");
            int gold = Convert.ToInt32(Console.ReadLine());

            int crystalPrice = 10;

            Console.Write($"Цена кристаллов {crystalPrice}. Сколько кристаллов вы хотите купить? ");
            int crystalsToBuy = Convert.ToInt32(Console.ReadLine());

            int crystalsBought = crystalsToBuy;
            int remainingGold = gold - crystalsToBuy * crystalPrice;

            Console.WriteLine($"После сделки у вас осталось {remainingGold} золота и {crystalsBought} кристаллов.");
            Console.ReadLine();
        }
    }
}
